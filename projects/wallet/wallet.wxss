/* projects/wallet/wallet.wxss */
.container{
  width: 100%;
  height: 100vh;
  background: #f2f2f2;
}
.money{
  background: #fff;
  padding: 60rpx;
  text-align: center;
}
.money-title{
  font-size: 30rpx;
}
.money-content{
  margin: 40rpx auto;
  font-size: 100rpx;
  font-weight: 700;
}
.money-desc text {
  padding: 10rpx 30rpx;
  border: 1px solid black;
  border-radius: 60rpx;
  font-size: 30rpx;
}
.btn-charge{
  width: 90%;
  margin: 40rpx auto;
  background: #b9dd08;
}
.same{
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 50rpx;
}
.my-money{
  margin-top: 8rpx;
}
.about{
  margin-top: 40rpx;
}