/* projects/warn/warn.wxss */
.container{
  background: #f2f2f2;
}
.title{
  background: #f2f2f2;
  padding: 30rpx 0 30rpx 40rpx;
  font-size: 28rpx;
}
.choose{
  background: #fff;
   
}
.choose checkbox-group{
  padding: 50rpx; 
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.choose checkbox-group .check{
  width: 45%;
   margin-top: 36rpx;
  line-height: 100rpx;
  text-align: center; 
  border: 2px solid #b9dd08;
  border-radius: 10rpx;
}
.choose checkbox-group .check:nth-of-type(1),.choose checkbox-group .check:nth-of-type(2){
  margin-top: 0;
}
.actions .action-pics{
  background: #fff;
  padding: 40rpx 0 40rpx 40rpx;
}
.actions .action-pics image{
  width: 120rpx;
  height: 120rpx;
  margin-left: 25rpx;
  position: relative;
  overflow: visible;
  vertical-align: top;
}
.actions .action-pics image icon{
  position: absolute;
  right: 10rpx;
  top: -10rpx;
}
.actions .action-pics .add{
  display: inline-block;
  height: 120rpx;
  width: 120rpx;
  border: 1px dashed #ccc;
  margin-left: 25rpx;
  font-size: 26rpx;
  color: #ccc;
  line-height: 120rpx;
  text-align: center;
}
.actions .actions-input{
  background: #fff;
  padding: 40rpx 0 40rpx 40rpx; 
  margin-top: 40rpx;
}
.actions .actions-input input{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  width: 90%;
}
.actions .actions-input input:first-child{
  border-bottom: 1px solid #ccc;
}
.submit{
  width: 90%;
  margin-left: 5%;
  padding: 40rpx 0;
}
